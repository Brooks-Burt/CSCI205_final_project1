<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.ParticleSystemController">
   <children>
      <Canvas fx:id="canvas" height="600.0" layoutX="180.0" layoutY="65.0" width="650.0" AnchorPane.leftAnchor="150.0" />
      <VBox layoutX="14.0" layoutY="93.0" prefHeight="200.0" prefWidth="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <CheckBox fx:id="checkBoxContinuous" mnemonicParsing="false" text="Continuous">
               <padding>
                  <Insets bottom="10.0" left="10.0" top="20.0" />
               </padding>
            </CheckBox>
            <Button fx:id="btnGenerate" mnemonicParsing="false" text="Generate Emitters">
               <padding>
                  <Insets bottom="10.0" right="30.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnStart" mnemonicParsing="false" text="Start">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnStop" mnemonicParsing="false" text="Stop">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
